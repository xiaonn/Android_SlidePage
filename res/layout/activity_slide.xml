<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/slide_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/slide_bar_textView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/slideBarTitle_1"
            android:textColor="@android:color/black"
            android:textSize="14dp" >
        </TextView>

        <TextView
            android:id="@+id/slide_bar_textView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/slideBarTitle_2"
            android:textColor="@android:color/black"
            android:textSize="14dp" >
        </TextView>

        <TextView
            android:id="@+id/slide_bar_textView3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/slideBarTitle_3"
            android:textColor="@android:color/black"
            android:textSize="14dp" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/slide_picture" />

    <android.support.v4.view.ViewPager
        android:id="@+id/slide_viewPager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" >
    </android.support.v4.view.ViewPager>

</LinearLayout>